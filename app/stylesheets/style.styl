@import '../../assets/css/normalize.css';
@import '../../assets/css/Skeleton/css/skeleton.css';


body
  margin 0
  padding 0
  background-color #026873;
  background-image linear-gradient(90deg, rgba(255,255,255,.07) 50%, transparent 50%),
  linear-gradient(90deg, rgba(255,255,255,.13) 50%, transparent 50%),
  linear-gradient(90deg, transparent 50%, rgba(255,255,255,.17) 50%),
  linear-gradient(90deg, transparent 50%, rgba(255,255,255,.19) 50%)
  background-size 13px, 29px, 37px, 53px
  height 100%

#container
  background-color #fff
  height 100%
  padding-top 20px

.section
  font-family 'Open Sans'
  padding 20px
  text-align center


#canvas
  padding 0

.logo
  display block
  margin auto auto 20px auto
  width 400px
  height 360px

.head
  text-align center
  font-family Bangers, Arial

.technical-list
  text-align left

.sign
  font-family Bangers, Arial
  font-size 24px

.hide
  display none

.btn {
  border-radius: 4px;
  color: #ffffff;
  font-size: 34px;
  padding: 10px 30px 10px 30px;
  text-decoration: none;
}

.btn:hover {
  background #ff45cd
  color: #ffffff;
  background-image linear-gradient(to bottom, #ff45cd, #ff00bb);
  text-decoration none
}

.btn-pink
  background #ff00bb
  background-image linear-gradient(to bottom, #ff00bb, #d1029a)

.btn-ani
  animation: glowBtn 2s infinite;

@keyframes glowBtn
  0%
    background-color #ff45cd
    box-shadow: 0 0 19px #ccc
  50%
    background-color: #91bd09;
    box-shadow: 0 0 28px #91bd09
  100%
    background-color: #ff00bb
    box-shadow: 0 0 19px #ccc
